#include <stdio.h>
#include <stdlib.h>
main(){
    int valor1=1, x, y, z, Toth=0; //variaveis
    while(valor1!=0){ //se for 0 acaba, se n√£o for executa o comando abaixo
        scanf("%d", &valor1);
        int matriz[valor1][valor1]; //preenchimento da matriz
        for (x=0;x<valor1;x++){ 
            for (y=0; y<valor1; y++){
                matriz[x][y]=0;
            }
        }
        for (z=0; z<=(valor1/2); z++){ 
            for (x=z; x<valor1-z; x++){
                for (y=z; y<valor1-z; y++){
                    matriz[x][y]++;
                     
                }
            }
        }
        Toth++;
        if (valor1!=0){//comandos para exibir a matriz
            for (x=0; x<valor1; x++){
                for (y=0; y<valor1; y++){
                    printf("%3d", matriz[x][y]);
                    if (y<valor1-1) printf(" ");
                }
                printf("\n");
            }
            printf ("\n");
        }
    }
    return 0;
}
